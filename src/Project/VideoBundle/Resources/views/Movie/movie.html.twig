{% extends 'base.html.twig' %}

{% block title %}Movie - {{ title }} {% endblock %}

{% block body %}

{% if is_granted("ROLE_USER") %}
    Zalogowany jako: {{ app.user.username }}
	<a href="/pp5/web/app_dev.php/logout">Wyloguj</a>
{% else %}
	<a href="/pp5/web/app_dev.php/register">Rejestracja</a>
	<a href="/pp5/web/app_dev.php/login">Logowanie</a>
{% endif %}

<p>
{% if poster is defined %}
<img src='{{ poster }}'/>
{% endif %}
</p>
<h2>Title: {{ title }}</h2>
<p>Description: {{ plot }}</p>
<p>Actors: {{ actors }}</p>
<p>Price: {{ price }} PLN <button id="rent">Add to cart</button></p>

<h3>Reviews</h3>
<div id="reviews">
	{% for item in comments %}
	<p>{{item.user.username}}: {{item.value}}</p>
	{% endfor %}
</div>

{% if is_granted("ROLE_USER") %}
<a href="/pp5/web/app_dev.php/comment/{{user_id}}/{{movie_id}}"><button id="rent">Add new review</button></a>
{% endif %}

{% endblock %}